<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for light mode -->
    <style name="Theme.IdeaJolt" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/gold</item>
        <item name="colorPrimaryDark">@color/dark_gold</item>
        <item name="colorAccent">@color/gold</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/white</item>
        <item name="colorSurface">@color/light_surface</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/dark_gray</item>

        <item name="android:statusBarColor">@color/gold</item>
    </style>

    <!-- No ActionBar version for light theme -->
    <style name="Theme.IdeaJolt.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>