<?xml version="1.0" encoding="utf-8"?>
<resources>
        <!-- Base application theme -->
        <style name="Theme.StyleMate" parent="Theme.MaterialComponents.Light.NoActionBar">
                <!-- Primary brand colors -->
                <item name="colorPrimary">@color/primary</item>
                <item name="colorPrimaryDark">@color/primaryDark</item>
                <item name="colorAccent">@color/accent</item>

                <!-- System UI customization -->
                <item name="android:statusBarColor">@color/background</item>
                <item name="android:windowLightStatusBar">true</item>

                <!-- Make the navigation bar transparent/match background -->
                <item name="android:windowTranslucentNavigation">false</item>

                <!-- Remove the bottom system navigation line -->
                <item name="android:windowDrawsSystemBarBackgrounds">true</item>

                <!-- Additional theme attributes -->
                <item name="android:windowBackground">@color/background</item>
                <item name="android:navigationBarColor">@color/background</item>
                <item name="android:windowLightNavigationBar">true</item>
                <item name="android:enforceNavigationBarContrast">false</item>
        </style>

        <!-- No Action Bar theme -->
        <style name="Theme.StyleMate.NoActionBar">
                <item name="windowActionBar">false</item>
                <item name="windowNoTitle">true</item>
        </style>

        <!-- Edge to Edge theme -->
        <style name="Theme.StyleMate.NoActionBar.EdgeToEdge">
                <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
                <item name="android:fitsSystemWindows">false</item>
        </style>
</resources>