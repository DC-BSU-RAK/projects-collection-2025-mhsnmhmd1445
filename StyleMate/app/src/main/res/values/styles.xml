<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom pill-style button for toggle buttons -->
    <style name="Widget.App.Button.Pill" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="rippleColor">@color/transparent</item>
        <item name="strokeColor">@color/divider</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <!-- Ensure the background fills the entire button -->
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.Pill</item>
    </style>

    <style name="ThemeOverlay.App.Button.Pill" parent="">
        <item name="colorSurface">@android:color/transparent</item>
    </style>

    <!-- Rounded shape for FAB and small components -->
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>